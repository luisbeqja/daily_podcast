{
    "schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "gunicorn app:app --worker-class gthread --threads 8",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
} 